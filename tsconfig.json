{
  "compilerOptions": {
    "baseUrl": "src",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es2022",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
    "downlevelIteration": false,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
		"ES2022"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
}
