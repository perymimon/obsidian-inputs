{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"*": ["node_modules/*"]
		},
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "node",
		"allowJs": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"isolatedModules": true,
		"strictNullChecks": true,
		"downlevelIteration": false,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2022","ESNext"
		],
		"resolveJsonModule": true,
	},
	"include": [
		"src/**/*.ts", "tests/**/*.ts", "src/**/*.d.ts"
	],
	"exclude": ["node_modules", "**/*.test.ts", "src/draft/**"]


}
